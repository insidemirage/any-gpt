{
  "name": "anygpt",
  "version": "1.0.0",
  "description": "A VSCode extension for chatting with any GPT model",
  "publisher": "insidemirage",
  "main": "./dist/extension.cjs",
  "type": "module",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "contributes": {
    "commands": {
      "command": "anygpt.reviewFile",
      "title": "Review Current File"
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "any-gpt",
          "title": "AnyGpt",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "any-gpt": [
        {
          "id": "AnyGptView",
          "name": "AnyGpt",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "yarn build:ext & yarn build:app",
    "build:ext": "node build-extension.js",
    "watch:ext": "node build-extension.js --watch",
    "build:app": "vite build",
    "preview": "vite preview",
    "start:webview": "vite dev",
    "lint": "eslint src --ext .ts,.tsx",
    "lint-staged": "lint-staged",
    "typecheck": "tsc --project ./tsconfig.json --noEmit",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "keywords": [
    "vscode",
    "extension",
    "gpt",
    "chat",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.9.2",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^5.0.4",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "esbuild": "^0.25.11",
    "eslint": "^9.38.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "html-webpack-plugin": "^5.6.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "sass": "^1.93.2",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "vite": "^7.1.12"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.4",
    "@mui/material": "^7.3.4",
    "@redux-devtools/extension": "^3.3.0",
    "@reduxjs/toolkit": "^2.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "axios": "^1.12.2",
    "highlight.js": "^11.11.1",
    "lodash": "^4.17.21",
    "marked": "^16.4.1",
    "nanoid": "^5.1.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-redux": "^9.2.0",
    "redux-saga": "^1.4.2"
  }
}
